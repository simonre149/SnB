{% extends 'base.html.twig' %}
{% block body %}
    <h1 style="text-align: center;">Sell</h1>
    <div class="form col-lg-6" style="margin: auto; margin-top: 20px">
        {{ form_start(form) }}

        <div class="form-group", style="margin: 20px">
        {{ form_row(form.title, {'attr': {'placeholder':"Title..."}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
        {{ form_row(form.description, {'attr': {'placeholder':"Description..."}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
        {{ form_row(form.price, {'attr': {'placeholder':"Price..."}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.imageFile, {'attr': {'placeholder':"File (optional)"}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
        {{ form_row(form.city, {'attr': {'placeholder':"City..."}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
        {{ form_row(form.postalCode, {'attr': {'placeholder':"Postal code..."}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.phone, {'attr': {'placeholder':"Phone number..."}}) }}
        </div>

        <div class="form-group", style="margin: 20px">
            {{ form_row(form.category) }}
        </div>

        {% if form.subcategory is defined %}
        <div class="form-group", style="margin: 20px">
            {{ form_row(form.subcategory) }}
        </div>
        {% endif %}

        <button type="submit" class="btn">Sell</button>
        {{ form_end(form) }}
    </div>
{% endblock %}