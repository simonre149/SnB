{% extends 'base.html.twig' %}
{% block body %}
    <h1 style="text-align: center; padding-bottom: 2%;">Messages</h1>
    {% if allContactedUsers == [] %}
        <h4 style="text-align: center">No contacted users yet.</h4>
    {% else %}
    <div class="card mx-auto" style="width: 18rem">
        <ul class="list-group list-group-flush">
            {% for user in allContactedUsers %}
            <li class="list-group-item"><a href="{{ path('usermessages', {user_id: user.id})  }}">{{ user.username }}</a></li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
{% endblock %}