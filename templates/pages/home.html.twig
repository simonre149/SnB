{% extends 'base.html.twig' %}
{% block body %}
    <div class="jumbotron" style="text-align: center; padding-top: 2%; padding-bottom: 2%   ">
        <h1 class="display-4">Welcome on SnB {% if app.user %}{{ app.user.username }}{% endif %} !</h1>
        <p class="lead">The best way to be buy or sell (almost) everything !</p>
        {% if not app.user %}
            <hr class="my-4">
            <p>You are not logged in, you can't buy or sell anything, so you should :</p>
            <p class="lead">
                <a class="btn" href="{{ path('security_registration') }}" role="button">Register</a>
                or
                <a class="btn" href="{{ path('security_login') }}" role="button">Login</a>
            </p>
        {% endif %}
        {% if app.user and current_menu is defined and current_menu == 'home'%}
            <a class="btn" href="{{ path('profile') }}">Go to your profile</a>

            {% if form is defined %}
                <h4 style="text-align: center; margin-top: 2rem">Search</h4>
                {{ form_start(form) }}
                <div class="form-row mt-4 justify-content-center">
                    <div class="form-group col-md-4 mr-4">
                        {{ form_row(form.search, {'attr': {'placeholder':"Search keywords..."}}) }}
                    </div>
                    <div class="form-group col-md-2 mr-4">
                        {{ form_row(form.min_price, {'attr': {'placeholder':"Minimum price (optional)"}}) }}
                    </div>
                    <div class="form-group col-md-2 mr-4">
                        {{ form_row(form.max_price, {'attr': {'placeholder':"Maximum price (optional)"}}) }}
                    </div>
                    <div class="form-group col-md-2 mr-4">
                        {{ form_row(form.subcategory) }}
                    </div>
                </div>
                <button type="submit" class="btn">Search</button>
                {{ form_end(form) }}
            {% endif %}
        {% endif %}
    </div>


    {% if app.user %}
        {% if current_menu == 'home' %}
            <h1 style="text-align: center">Latest goods added</h1>
        {% endif %}
        {% if current_menu == 'search' %}
            <h2 style="text-align: center">Search results for "{{ search_content }}" in subcategory {{ subcategory_name }}</h2>
        {% endif %}
        {% if allGoods is defined and allGoods == null %}
            <h4 style="text-align: center; margin-top: 2%">No results.</h4>
            <div class="btn-container mt-4" style="text-align: center">
                <a class="btn" href="{{ path('home') }}">Go back to home</a>
            </div>
        {% endif %}
        {% include 'pages/cards.html.twig' %} <!-- On change juste la variable allGoods en fonction de ce qu'on veut afficher -->
    {% endif %}
{% endblock %}