{% extends 'base.html.twig' %}
{% block body %}
    <h1>Registration</h1>
    {{ form_start(form) }}

    <div class="form-group", style="margin: 20px">
        {{ form_row(form.username, {'label': "Username",'attr': {'placeholder' : 'Username ...'}}) }}
    </div>

    <div class="form-group", style="margin: 20px">
        {{ form_row(form.email, {'label': "Email",'attr': {'placeholder' : 'Email ...'}}) }}
    </div>

    <div class="form-group", style="margin: 20px">
        {{ form_row(form.password, {'label': "Password",'attr': {'placeholder' : 'Password ...'}})  }}
        <small class="form-text text-muted">
            Warning : Your password must be at least 8 characters long, contain letters, numbers and special characters, but must not contain spaces.
        </small>
    </div>

    <div class="form-group", style="margin: 20px">
        {{ form_row(form.confirm_password, {'label': "Password confirmation",'attr': {'placeholder' : 'Confirm your password ...'}})  }}
    </div>

    <button type="submit" class="btn" style="margin-left: 20px">Submit</button>
    or
    <a href="{{ path('security_login') }}" style="color: black;" role="button">
        <u>login</u>
    </a>
    if you already have an account.
    {{ form_end(form) }}
{% endblock %}